<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/imKhuyenMaiDienTu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:src="@drawable/backgroundplashscreen"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/txtTenSanPhamNoiBat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Các thương hiệu lớn"
        android:layout_margin="5dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleThuongHieuLon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/txtTenTopSanPhamNoiBat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top điện thoại và máy tính bản"
        android:layout_margin="5dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleTopDienThoaiMayTinhBang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>