<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cartView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imHinhGioHang"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtTieuDeGioHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Tên sản phẩm" />

                <TextView
                    android:id="@+id/txtGiaGioHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá tiền"
                    android:textAlignment="center"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/txtGiamGiaGioHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size10dp"
                    >
                    <ImageButton
                        android:id="@+id/imGiamSoLuongSPTrongGioHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_remove_black_24dp"
                        android:background="@color/colorWhite"
                        />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray"
                        android:layout_marginRight="@dimen/size10dp"
                        android:layout_marginLeft="@dimen/size10dp"
                        />
                    <TextView
                        android:id="@+id/txtSoLuongSPTrongGioHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray"
                        android:layout_marginRight="@dimen/size10dp"
                        android:layout_marginLeft="@dimen/size10dp"
                        />
                    <ImageButton
                        android:id="@+id/imTangSoLuongSPTrongGioHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_black_24dp"
                        android:background="@color/colorWhite"
                        />
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/imXoaSanPhamGioHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/size10dp"
                android:src="@drawable/ic_delete_black_24dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
